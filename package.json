{
	"name": "torystories.stream",
	"private": true,
	"description": "GatsbyJS site for author podcast.",
	"version": "0.1.0",
	"author": "ZweihÃ¤nder",
	"license": "MIT",
	"dependencies": {
		"@fontsource/cormorant-sc": "^4.4.5",
		"@fontsource/nunito-sans": "^4.4.5",
		"autoprefixer": "^10.2.6",
		"gatsby": "^3.7.0",
		"gatsby-alias-imports": "^1.0.6",
		"gatsby-plugin-catch-links": "^3.7.0",
		"gatsby-plugin-image": "^1.7.0",
		"gatsby-plugin-manifest": "^3.7.0",
		"gatsby-plugin-netlify-cms": "^5.7.0",
		"gatsby-plugin-react-helmet": "^4.7.0",
		"gatsby-plugin-remove-fingerprints": "^0.0.2",
		"gatsby-plugin-sass": "^4.7.0",
		"gatsby-plugin-sharp": "^3.7.0",
		"gatsby-plugin-typegen": "^2.2.4",
		"gatsby-plugin-typescript": "^3.7.0",
		"gatsby-source-filesystem": "^3.7.0",
		"gatsby-transformer-remark": "^4.4.0",
		"gatsby-transformer-sharp": "^3.7.0",
		"include-media": "^1.4.10",
		"netlify-cms-app": "^2.15.18",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-helmet": "^6.1.0",
		"react-icons": "^4.2.0",
		"react-player": "^2.9.0",
		"sass": "^1.34.1",
		"tailwindcss": "^2.1.4"
	},
	"devDependencies": {
		"@babel/preset-typescript": "^7.13.0",
		"@types/react": "^17.0.9",
		"@types/react-dom": "^17.0.6",
		"@types/react-helmet": "^6.1.1",
		"@typescript-eslint/eslint-plugin": "^4.26.1",
		"@typescript-eslint/parser": "^4.26.1",
		"eslint": "^7.28.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-graphql": "^4.0.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-react": "^7.24.0",
		"netlify-cli": "^3.35.10",
		"prettier": "^2.3.1",
		"stylelint": "^13.13.1",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-sass-guidelines": "^8.0.0",
		"stylelint-config-standard": "^22.0.0",
		"ts-graphql-plugin": "^2.1.3",
		"tslib": "^2.2.0",
		"typescript": "^4.3.2"
	},
	"scripts": {
		"build": "GATSBY_EXPERIMENTAL_PAGE_BUILD_ON_DATA_CHANGES=true gatsby build --log-pages",
		"develop": "gatsby develop",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
		"start": "npm run develop",
		"serve": "gatsby serve",
		"clean": "gatsby clean",
		"test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Zweihander-Main/torystories.stream"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"parserOptions": {
			"project": "tsconfig.json",
			"ecmaVersion": 2019,
			"ecmaFeatures": {
				"jsx": true
			},
			"useJSXTextNode": true
		},
		"plugins": [
			"@typescript-eslint",
			"react",
			"graphql"
		],
		"extends": [
			"eslint:recommended",
			"react-app",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"plugin:react/recommended",
			"prettier",
			"prettier/@typescript-eslint",
			"prettier/react"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": [
				"error",
				{
					"allow": [
						"warn",
						"error",
						"debug"
					]
				}
			],
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			],
			"react/prop-types": 0,
			"graphql/template-strings": [
				"error",
				{
					"env": "relay",
					"tagName": "graphql",
					"schemaJson": "src/__generated__/gatsby-introspection.json"
				}
			]
		},
		"overrides": [
			{
				"files": [
					"./src/queries/graphql.tsx"
				],
				"rules": {
					"@typescript-eslint/camelcase": "off",
					"@typescript-eslint/no-explicit-any": "off"
				}
			}
		]
	},
	"eslintIgnore": [
		"/*.js"
	],
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-sass-guidelines",
			"stylelint-config-prettier"
		],
		"rules": {
			"indentation": [
				"tab",
				{
					"ignore": "value"
				}
			],
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"tailwind",
						"apply",
						"layer",
						"variants",
						"responsive",
						"screen"
					]
				}
			],
			"scss/at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"tailwind",
						"apply",
						"layer",
						"variants",
						"responsive",
						"screen"
					]
				}
			],
			"max-empty-lines": 2,
			"comment-whitespace-inside": null,
			"declaration-block-no-shorthand-property-overrides": true,
			"declaration-colon-newline-after": null,
			"no-descending-specificity": null,
			"value-keyword-case": null,
			"selector-pseudo-class-no-unknown": [
				true,
				{
					"ignorePseudoClasses": [
						"global"
					]
				}
			]
		}
	},
	"browserslist": {
		"production": [
			"> 0.2%",
			"Firefox ESR",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
