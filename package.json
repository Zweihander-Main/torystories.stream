	"scripts": {
		"build": "gatsby build --log-pages",
		"dev": "GATSBY_EXPERIMENTAL_QUERY_CONCURRENCY=32 GATSBY_CPU_COUNT=logical_cores gatsby clean; gatsby develop",
		"clean": "gatsby clean",
		"serve": "GATSBY_EXPERIMENTAL_QUERY_CONCURRENCY=32 GATSBY_CPU_COUNT=logical_cores gatsby clean; gatsby build; gatsby serve -p 8000",
		"test": "is-ci-cli test:coverage test:watch",
		"test:coverage": "jest --passWithNoTests --coverage --selectProjects \"client\"",
		"test:watch": "jest --watch",
		"test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
		"test:e2e": "is-ci-cli test:e2e:run test:e2e:dev",
		"test:e2e:run": "CYPRESS_PROD_BUILD=true start-server-and-test serve http://localhost:8000 cy:run",
		"test:e2e:dev": "CYPRESS_PROD_BUILD=false start-server-and-test dev http://localhost:8000 cy:open",
		"test:e2e:dev:prod": "CYPRESS_PROD_BUILD=true start-server-and-test serve http://localhost:8000 cy:open",
		"cy:run": "cypress run --env type=cli",
		"cy:open": "cypress open --env type=browser",
		"lint": "jest --config=\"jest.config.js\"",
		"lint:ts": "tsc -p .",
		"lint:md": "remark .",
		"prepare": "husky install",
		"netlify:build": "yarn run build",
		"netlify:coverage": "yarn run test:coverage && cp -r coverage/lcov-report public/lcov-report",
		"netlify:test": "gatsby serve -p 8000",
		"format": "prettier --write \"**/*{js,jsx,ts,tsx,json,md,css,md,scss}\""
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Zweihander-Main/torystories.stream"
	},
	"lint-staged": {
		"**/*.+(js|jsx|ts|tsx|json|css|html|md)": [
			"jest --findRelatedTests --passWithNoTests"
		],
		"**/*.+(md)": [
			"remark -q"
		]
	},
	"remarkConfig": {
		"plugins": [
			"remark-preset-lint-recommended"
		]
	},
	"eslintConfig": {
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": "tsconfig.json",
			"ecmaVersion": 2021,
			"ecmaFeatures": {
				"jsx": true
			},
			"useJSXTextNode": true
		},
		"plugins": [
			"@typescript-eslint",
			"react"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"plugin:react/recommended",
			"plugin:react-hooks/recommended",
			"plugin:jsx-a11y/recommended",
			"prettier"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": [
				"error",
				{
					"allow": [
						"warn",
						"error",
						"debug"
					]
				}
			],
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			],
			"react/prop-types": 0,
			"@typescript-eslint/unbound-method": [
				"error",
				{
					"ignoreStatic": true
				}
			]
		},
		"overrides": [
			{
				"files": [
					"./src/queries/graphql.tsx"
				],
				"rules": {
					"@typescript-eslint/camelcase": "off",
					"@typescript-eslint/no-explicit-any": "off"
				}
			},
			{
				"files": [
					"*.graphql"
				],
				"parser": "@graphql-eslint/eslint-plugin",
				"plugins": [
					"@graphql-eslint"
				],
				"rules": {
					"@graphql-eslint/known-type-names": "error"
				}
			}
		]
	},
	"eslintIgnore": [
		"/*.js",
		"test",
		"cypress",
		"gatsby-types.d.ts",
		"cypress.config.ts"
	],
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always",
		"editorconfig": true,
		"overrides": [
			{
				"files": "*.yml",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-prettier"
		],
		"rules": {
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"tailwind",
						"apply",
						"layer",
						"variants",
						"responsive",
						"screen"
					]
				}
			],
			"comment-whitespace-inside": null,
			"declaration-block-no-shorthand-property-overrides": true,
			"declaration-colon-newline-after": null,
			"no-descending-specificity": null,
			"value-keyword-case": null,
			"selector-pseudo-class-no-unknown": [
				true,
				{
					"ignorePseudoClasses": [
						"global"
					]
				}
			]
		}
	},
	"browserslist": {
		"production": [
			"> 0.2%",
			"Firefox ESR",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
