	"scripts": {
		"build": "gatsby build --log-pages",
		"dev": "gatsby clean; gatsby develop",
		"serve": "gatsby clean; gatsby build; gatsby serve",
		"test": "is-ci test:coverage test:watch",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
		"test:e2e": "is-ci test:e2e:run test:e2e:dev",
		"pretest:e2e:run": "npm run build",
		"test:e2e:run": "start-server-and-test start http://localhost:8000 cy:run",
		"test:e2e:dev": "start-server-and-test dev http://localhost:8000 cy:open",
		"cy:run": "cypress run",
		"cy:open": "cypress open",
		"lint": "jest --config=\"jest.config.js\" --projects \"./test/jest.lint.*.js\"",
		"format": "prettier --write \"**/*{js,jsx,ts,tsx,json,md,css,md,scss}\""
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Zweihander-Main/torystories.stream"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"parserOptions": {
			"project": "tsconfig.json",
			"ecmaVersion": 2019,
			"ecmaFeatures": {
				"jsx": true
			},
			"useJSXTextNode": true
		},
		"plugins": [
			"@typescript-eslint",
			"react",
			"graphql"
		],
		"extends": [
			"eslint:recommended",
			"react-app",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"plugin:react/recommended",
			"prettier"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": [
				"error",
				{
					"allow": [
						"warn",
						"error",
						"debug"
					]
				}
			],
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			],
			"react/prop-types": 0,
			"graphql/template-strings": [
				"error",
				{
					"env": "relay",
					"tagName": "graphql"
				}
			],
			"@typescript-eslint/unbound-method": [
				"error",
				{
					"ignoreStatic": true
				}
			]
		},
		"overrides": [
			{
				"files": [
					"./src/queries/graphql.tsx"
				],
				"rules": {
					"@typescript-eslint/camelcase": "off",
					"@typescript-eslint/no-explicit-any": "off"
				}
			}
		]
	},
	"eslintIgnore": [
		"/*.js",
		"test",
		"cypress",
		"__generated__"
	],
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-prettier"
		],
		"rules": {
			"indentation": [
				"tab",
				{
					"ignore": "value"
				}
			],
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"tailwind",
						"apply",
						"layer",
						"variants",
						"responsive",
						"screen"
					]
				}
			],
			"max-empty-lines": 2,
			"comment-whitespace-inside": null,
			"declaration-block-no-shorthand-property-overrides": true,
			"declaration-colon-newline-after": null,
			"no-descending-specificity": null,
			"value-keyword-case": null,
			"selector-pseudo-class-no-unknown": [
				true,
				{
					"ignorePseudoClasses": [
						"global"
					]
				}
			]
		}
	},
	"browserslist": {
		"production": [
			"> 0.2%",
			"Firefox ESR",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
